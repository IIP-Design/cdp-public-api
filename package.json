{
  "name": "cdp-public-api",
  "version": "5.2.2",
  "main": "server.js",
  "author": "U.S. Department of State, Bureau of Global Public Affairs Digital Lab <gpa-lab@america.gov>",
  "description": "Rest API that manages the inter-connections between the Lab's Content Distribution Platform microservices",
  "license": "MIT",
  "scripts": {
    "build:clear": "rimraf build",
    "build:worker": "webpack -c config/webpack.worker.js --mode production --progress --color",
    "build:main": "webpack -c config/webpack.config.js --mode production --progress --color",
    "build": "npm run build:clear && npm run build:worker && npm run build:main",
    "dev": "nodemon -e js -x babel-node --inspect=7000 src/index.js",
    "dev:worker": "nodemon -e js -x babel-node --inspect=7001 src/workers/consumer.js",
    "lint": "eslint --ext .js --quiet ./",
    "start": "npm run start:main & npm run start:worker",
    "start:worker": "node build/consumer.js",
    "start:main": "node build/server.js"
  },
  "dependencies": {
    "ajv": "^7.2.1",
    "amqplib": "^0.7.1",
    "aws-sdk": "^2.868.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "bodybuilder": "^2.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parse": "^4.15.3",
    "cuid": "^2.1.8",
    "dotenv": "^8.2.0",
    "elasticsearch": "^15.5.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "get-stream": "^6.0.0",
    "helmet": "^4.4.1",
    "http-aws-es": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash.clonedeep": "^4.5.0",
    "mammoth": "^1.4.16",
    "mime-types": "^2.1.29",
    "morgan": "^1.10.0",
    "newrelic": "^7.1.3",
    "node-html-to-image": "^3.1.0",
    "request": "^2.88.2",
    "s3-zip": "^3.2.0",
    "tmp": "^0.2.1",
    "tus-js-client": "^2.2.0",
    "vimeo": "^2.1.1",
    "xss": "^1.0.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/eslint-parser": "^7.13.10",
    "@babel/node": "^7.13.10",
    "@babel/plugin-proposal-optional-chaining": "^7.13.8",
    "@babel/preset-env": "^7.13.10",
    "@gpa-lab/eslint-config": "^1.4.1",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.22.0",
    "eslint-import-resolver-babel-module": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "start-server-webpack-plugin": "^2.2.5",
    "webpack": "^5.27.0",
    "webpack-cli": "^4.5.0",
    "webpack-merge": "^5.7.3",
    "webpack-node-externals": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:IIP-Design/cdp-public-api.git"
  }
}
